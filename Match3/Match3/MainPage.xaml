<Page
    x:Class="Match3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Match3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#000000">
        <Viewbox>
            <Canvas x:Name="gameCanvas" Height="768" Width="1366" PointerMoved="PointerMoved" PointerPressed="PointerPressed" PointerReleased="PointerReleased" IsDoubleTapEnabled="False">
                <TextBlock x:Name="frameRate" Margin="50,50" />
            </Canvas>
        </Viewbox>
    </Grid>
</Page>
